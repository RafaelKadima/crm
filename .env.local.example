# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO LOCAL
# ===========================================
# Copie para .env: copy .env.local.example .env
# ===========================================

APP_NAME=CRM
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE (SQLite para Desenvolvimento)
# ===========================================
DB_CONNECTION=sqlite
# O arquivo database.sqlite será criado em database/database.sqlite

# ===========================================
# SESSION / CACHE / QUEUE (Database para Dev)
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=database

# ===========================================
# REDIS (Opcional para Dev - descomente se precisar)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# MAIL (Log para Dev - não envia emails reais)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="crm@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# PUSHER / WEBSOCKETS (Desabilitado para Dev)
# ===========================================
PUSHER_APP_ID=app-id
PUSHER_APP_KEY=app-key
PUSHER_APP_SECRET=app-secret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"

# ===========================================
# AWS S3 (Local Storage para Dev)
# ===========================================
MEDIA_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# OPENAI / AI SERVICE (Opcional para Dev)
# ===========================================
# Deixe vazio se não for usar os recursos de IA
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TTS_VOICE=nova
OPENAI_AUDIO_THRESHOLD=500

AI_AGENT_ENABLED=false
AI_AGENT_URL=http://localhost:8001
AI_AGENT_API_KEY=

# ===========================================
# SENTRY (Desabilitado para Dev)
# ===========================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0

# ===========================================
# VITE
# ===========================================
VITE_APP_NAME="${APP_NAME}"
