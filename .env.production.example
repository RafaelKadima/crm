# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================
# Copie este arquivo e preencha com valores reais
# NÃO commite o arquivo preenchido no git!
# ===========================================

APP_NAME=CRM
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seu-dominio.com

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# DATABASE (PostgreSQL em Produção)
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Para o AI Service (URL-encoded se tiver caracteres especiais)
AI_DB_PASSWORD_ENCODED=

# ===========================================
# SESSION / CACHE / QUEUE
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# ===========================================
# REDIS
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# REVERB (WebSockets)
# ===========================================
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=0.0.0.0
REVERB_PORT=8080

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${APP_URL}"
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https

# ===========================================
# MAIL
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="crm@seu-dominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# AWS S3
# ===========================================
MEDIA_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=

# ===========================================
# OPENAI / AI SERVICE
# ===========================================
OPENAI_API_KEY=
OPENAI_PROJECT_ID=
OPENAI_MODEL=gpt-4o-mini
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TTS_VOICE=nova
OPENAI_AUDIO_THRESHOLD=500

AI_AGENT_ENABLED=true
AI_AGENT_URL=http://ai-service:8001
AI_AGENT_API_KEY=

AI_DEBUG=false
INTERNAL_API_KEY=

# Content Creator Agent
TAVILY_API_KEY=
GROQ_API_KEY=
GROQ_WHISPER_MODEL=whisper-large-v3

# ===========================================
# SENTRY (Error Tracking)
# ===========================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# VITE
# ===========================================
VITE_APP_NAME="${APP_NAME}"
